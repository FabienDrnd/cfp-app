= link_to 'Change', '#', class: 'btn btn-primary btn-xs', data: { toggle: 'modal', target: "#event_teammate-change-role-#{event_teammate.id}" }
%div{ id: "event_teammate-change-role-#{event_teammate.id}", class: 'modal fade' }
  .modal-dialog
    .modal-content
      = form_for event_teammate, url: reviewer_event_event_teammate_path(event_teammate.event, event_teammate), html: { role: 'form' } do |f|
        .modal-header
          %h3 Change event teammate role
        .modal-body
          = f.label :notifications
          = f.check_box :notifications, class: "checkbox"
          = f.label "Check to Receive Comment Notification Emails"