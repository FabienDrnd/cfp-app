%div{ id: "new-teammate-invitation", class: 'modal fade' }
  .modal-dialog
    .modal-content
      = simple_form_for(:teammate, url: event_staff_teammates_path(event)) do |f|
        .modal-header
          %h3 Invite a new teammate
        .modal-body
          = f.error_notification
          = f.input :email, class: "form-control"
          = f.input :role, as: :select, collection: Teammate::STAFF_ROLES, class: "form-control"

        .modal-footer
          %button.btn.btn-default{'data-dismiss' => "modal"} Cancel
          %button.pull-right.btn.btn-success{type: "submit"} Invite
