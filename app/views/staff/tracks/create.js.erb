<% if track.persisted? %>
  $('#config-modal').modal('hide');
  $('#tracks').append('<%=j render track %>');
  clearFields([
    '#track_name',
    '#track_description',
    '#track_guidelines'
  ], '#track-new-dialog');
<% else %>
  $('#config-modal .modal-header').append('<%=  track.errors.full_messages %>');
<% end %>

document.getElementById('flash').innerHTML = '<%=j show_flash %>';