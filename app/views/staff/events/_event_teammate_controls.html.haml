= link_to 'Change Role', '#', class: 'btn btn-primary btn-xs', data: { toggle: 'modal', target: "#event_teammate-change-role-#{event_teammate.id}" }
= link_to 'Remove', event_staff_team_index_path(event_teammate.event, event_teammate), method: :delete, data: { confirm: "Are you sure you want to remove #{event_teammate.user.name}?" }, class: 'btn btn-danger btn-xs'
%div{ id: "event_teammate-change-role-#{event_teammate.id}", class: 'modal fade' }
  .modal-dialog
    .modal-content
      = form_for event_teammate, url: event_staff_team_index_path(event_teammate.event, event_teammate), html: { role: 'form' } do |f|
        .modal-header
          %h3 Change #{event_teammate.user.name}'s role
        .modal-body
          = f.label :role
          = f.select :role, User::STAFF_ROLES, class: 'form-control'
        .modal-footer
          %button.btn.btn-default{'data-dismiss' => "modal"} Cancel
          %button.pull-right.btn.btn-primary{:type => "submit"} Save
